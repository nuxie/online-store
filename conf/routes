# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET           /                                   controllers.HomeController.index

# Map static resources from the /public folder to the /assets URL path
GET           /assets/*file                       controllers.Assets.versioned(path="/public", file: Asset)

GET           /cart/:id                           controllers.CartController.show(id: Int)
PUT           /cart/add-product/:id               controllers.CartController.addProduct(id: Int)
DELETE        /cart/remove-product/:id            controllers.CartController.removeProduct(id: Int)

GET           /categories/new                     controllers.CategoryController.create
POST          /categories/new/:id                 controllers.CategoryController.createHandle(id: Int)
GET           /categories/all                     controllers.CategoryController.list
GET           /categories/details/:id             controllers.CategoryController.details(id: Int)
GET           /categories/update/:id              controllers.CategoryController.update(id: Int)
PUT           /categories/update                  controllers.CategoryController.updateHandle
DELETE        /categories/delete/:id              controllers.CategoryController.delete(id: Int)

GET           /customers/new                      controllers.CustomerController.create
POST          /customers/new/:id                  controllers.CustomerController.createHandle(id: Int)
GET           /customers/all                      controllers.CustomerController.list
GET           /customers/details/:id              controllers.CustomerController.details(id: Int)
GET           /customers/update/:id               controllers.CustomerController.update(id: Int)
PUT           /customers/update                   controllers.CustomerController.updateHandle
DELETE        /customers/delete/:id               controllers.CustomerController.delete(id: Int)

GET           /invoices/new                       controllers.InvoiceController.create
POST          /invoices/new/:id                   controllers.InvoiceController.createHandle(id: Int)
GET           /invoices/all                       controllers.InvoiceController.list
GET           /invoices/details/:id               controllers.InvoiceController.details(id: Int)
GET           /invoices/update/:id                controllers.InvoiceController.update(id: Int)
PUT           /invoices/update                    controllers.InvoiceController.updateHandle
DELETE        /invoices/delete/:id                controllers.InvoiceController.delete(id: Int)

GET           /orders/new                         controllers.OrderController.create
POST          /orders/new/:id                     controllers.OrderController.createHandle(id: Int)
GET           /orders/all                         controllers.OrderController.list
GET           /orders/details/:id                 controllers.OrderController.details(id: Int)
GET           /orders/update/:id                  controllers.OrderController.update(id: Int)
PUT           /orders/update                      controllers.OrderController.updateHandle
DELETE        /orders/delete/:id                  controllers.OrderController.delete(id: Int)

GET           /products/new                       controllers.ProductsController.create
POST          /products/new/:id                   controllers.ProductsController.createHandle(id: Int)
GET           /products/all                       controllers.ProductsController.list
GET           /products/details/:id               controllers.ProductsController.details(id: Int)
GET           /products/update/:id                controllers.ProductsController.update(id: Int)
PUT           /products/update                    controllers.ProductsController.updateHandle
DELETE        /products/delete/:id                controllers.ProductsController.delete(id: Int)

GET           /promotions/new                     controllers.PromotionsController.create
POST          /promotions/new/:id                 controllers.PromotionsController.createHandle(id: Int)
GET           /promotions/all                     controllers.PromotionsController.list
GET           /promotions/details/:id             controllers.PromotionsController.details(id: Int)
GET           /promotions/update/:id              controllers.PromotionsController.update(id: Int)
PUT           /promotions/update                  controllers.PromotionsController.updateHandle

GET           /reviews/new                        controllers.ReviewsController.create
POST          /reviews/new/:id                    controllers.ReviewsController.createHandle(id: Int)
GET           /reviews/all                        controllers.ReviewsController.list
GET           /reviews/details/:id                controllers.ReviewsController.details(id: Int)
GET           /reviews/update/:id                 controllers.ReviewsController.update(id: Int)
PUT           /reviews/update                     controllers.ReviewsController.updateHandle
DELETE        /reviews/delete/:id                 controllers.ReviewsController.delete(id: Int)

GET           /stock/all                          controllers.ReviewsController.list
GET           /stock/details/:id                  controllers.ReviewsController.details(id: Int)
GET           /stock/update/:id                   controllers.ReviewsController.update(id: Int)
PUT           /stock/update                       controllers.ReviewsController.updateHandle

GET           /wishlist                           controllers.WishlistController.show
PUT           /wishlist/add-product/:id           controllers.WishlistController.addProduct(id: Int)
DELETE        /wishlist/remove-product/:id        controllers.WishlistController.removeProduct(id: Int)