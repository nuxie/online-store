# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET         /                                  controllers.HomeController.index

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                      controllers.Assets.versioned(path="/public", file: Asset)

GET         /api/cart                          controllers.CartController.listJSON()
GET         /api/cart/:id                      controllers.CartController.detailsJSON(id: Int)
POST        /api/cart                          controllers.CartController.addJSON()
PUT         /api/cart/:id                      controllers.CartController.updateJSON(id: Int)
DELETE      /api/cart/:id                      controllers.CartController.deleteJSON(id: Int)
GET         /cart/add                          controllers.CartController.add
POST        /cart/addHandle                    controllers.CartController.addHandle
GET         /cart/all                          controllers.CartController.list
GET         /cart/details/:id                  controllers.CartController.details(id: Int)
GET         /cart/update/:id                   controllers.CartController.update(id: Int)
POST        /cart/update                       controllers.CartController.updateHandle
GET         /cart/delete/:id                   controllers.CartController.delete(id: Int)

